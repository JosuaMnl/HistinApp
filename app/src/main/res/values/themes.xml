<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HistinApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brown_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="TextContent.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.SubTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <style name="TextContent.TitleDescription">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="TextContent.TitleDetail">
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="TextContent.ContentDescription">
        <item name="android:letterSpacing">0.1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
    </style>

    <style name="TextContent.ContentDetail">
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.ButtonShare">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/rounded_btn</item>
        <item name="android:drawableStart">@drawable/baseline_ios_share_24</item>
    </style>

    <style name="TextContent.AboutName">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextContent.AboutEmail">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>